# ============================================
# ATTACK CAPITAL UNIFIED INBOX - Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# REQUIRED - Database
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/unified_inbox?schema=public"

# ============================================
# REQUIRED - Better Auth (Authentication)
# ============================================
BETTER_AUTH_SECRET="generate-a-random-secret-key-here-min-32-characters"
BETTER_AUTH_URL="http://localhost:3000"

# ============================================
# REQUIRED - Twilio (SMS/WhatsApp)
# ============================================
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# OPTIONAL - Google OAuth (for Google Sign-in)
# ============================================
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# ============================================
# OPTIONAL - Real-time: Pusher (Alternative to local SSE)
# If not set, will use local Server-Sent Events (SSE) automatically
# ============================================
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="us2"

# Public Pusher keys (exposed to browser)
NEXT_PUBLIC_PUSHER_KEY=""
NEXT_PUBLIC_PUSHER_CLUSTER="us2"

# ============================================
# OPTIONAL - Email Service (Resend)
# ============================================
RESEND_API_KEY="re_xxxxxxxxxxxxx"
FROM_EMAIL="noreply@yourdomain.com"

# ============================================
# OPTIONAL - Twitter/X Integration
# ============================================
TWITTER_ACCESS_TOKEN="your_twitter_bearer_token"

# ============================================
# OPTIONAL - Facebook Messenger Integration
# ============================================
FACEBOOK_PAGE_ACCESS_TOKEN="your_facebook_page_access_token"

# ============================================
# OPTIONAL - Cron Job Secret (for scheduled messages)
# ============================================
CRON_SECRET="generate-a-random-secret-for-cron-jobs"

# ============================================
# OPTIONAL - Node Environment
# ============================================
NODE_ENV="development"
